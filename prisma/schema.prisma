generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// shop Owner model
model ShopOwner {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  shopName  String
  mobile    String @unique
  pincode   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

